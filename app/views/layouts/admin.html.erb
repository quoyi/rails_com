<%= render layout: 'layouts/admin_head' do %>
  <body>
    <%= render 'layouts/navbar' %>
    <main class="columns">
      <div class="column is-narrow" style="width:260px;">
        <%= render 'nav' %>
      </div>
      <div class="column as-body">
        <% if content_for?(:breadcrumb) %>
          <div class="breadcrumb has-succeeds-separator">
            <%= yield(:breadcrumb) %>
          </div>
        <% else %>
          <%= render 'breadcrumb' %>
        <% end %>
        <%= yield %>
      </div>
    </main>
    <div id="modal"></div>
  </body>
<% end %>
