<%= render layout: 'layouts/head' do %>
  <body>
    <%= render 'layouts/navbar' %>

    <main class="columns">
      <div class="column is-narrow" style="width: 260px;">
        <% if content_for?(:nav) %>
          <%= yield :nav %>
        <% else %>
          <%= render 'nav' %>
        <% end %>
      </div>

      <div class="column as-body">
        <div class="as-main as-vertical-middle">
          <%= yield %>
        </div>

        <%= render 'layouts/footer' %>
      </div>
    </main>

    <div id="modal"></div>
  </body>
<% end %>
